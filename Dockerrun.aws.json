{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name":"client",
            "image": "halapa/client",
            "hostname": "client",
            "essential": false
        },
        {
            "name":"server",
            "image": "halapa/server",
            "hostname": "api",
            "essential": false
        },
        {   "name":"worker",
            "image": "halapa/worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name":"nginx",
            "image": "halapa/nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client","server"]
        }
    ]
}